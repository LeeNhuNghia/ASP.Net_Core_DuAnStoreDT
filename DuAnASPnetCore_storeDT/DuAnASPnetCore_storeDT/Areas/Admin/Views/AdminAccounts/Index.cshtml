@model IEnumerable<DuAnASPnetCore_storeDT.Models.Account>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Quản lý tài khoản</h4>
            <a type="button" class="btn btn-outline-success btn-fw mb-4" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create">Create</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col"> ID </th>
                            <th scope="col"> UserName </th>
                            <th scope="col"> Password </th>
                            <th scope="col"> Name </th>
                            <th scope="col"> Email </th>
                            <th scope="col"> Phone </th>
                            <th scope="col"> Date </th>
                            <th scope="col"> Loại tài khoản </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null)
                        {
                            foreach(var item in Model)
                            {
                                <tr>
                                    <td scope="row"> @item.Tkid </td>
                                    <td> @item.Tkusername </td>
                                    <td> @item.Tkpassword </td>
                                    <td> @item.Tkname </td>
                                    <td> @item.Tkemail</td>
                                    <td> @item.Tkphone</td>
                                    <td> @item.Tkdate</td>
                                    <td> @item.LoaiTaiKhoan</td>
                                    <td>
                                        <div class="card-body">
                                            <div class="template-demo">
                                                <a type="button" class="btn btn-outline-secondary btn-fw" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.Tkid">View</a>
                                                <a type="button" class="btn btn-outline-warning btn-fw" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.Tkid">Edit</a>
                                                <a type="button" class="btn btn-outline-danger btn-fw" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.Tkid">Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


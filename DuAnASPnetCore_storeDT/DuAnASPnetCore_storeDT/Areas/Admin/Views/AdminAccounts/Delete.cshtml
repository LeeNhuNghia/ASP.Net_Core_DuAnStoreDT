@model DuAnASPnetCore_storeDT.Models.Account

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>XÓA TÀI KHOẢN</h1>

<h3 class="text-danger">Bạn có chắc muốn xóa tài khoản này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkusername)
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkpassword)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkname)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkemail)
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkphone)
        </dd>
        <dt class="col-sm-2">
            DateTime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tkdate)
        </dd>
        <dt class="col-sm-2">
            Loại tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiTaiKhoan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Tkid" />
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-fw" />
        <a asp-action="Index" class="btn btn-outline-secondary btn-fw">Back to List</a>
    </form>
</div>

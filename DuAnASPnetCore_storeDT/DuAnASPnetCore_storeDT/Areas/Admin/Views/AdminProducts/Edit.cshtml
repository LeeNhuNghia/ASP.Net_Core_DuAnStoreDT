@model DuAnASPnetCore_storeDT.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa sản phẩm</h2>

<hr />
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Product</h4>
            <form class="forms-sample" asp-action="Edit">

                <input type="hidden" asp-for="ProductId" />
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">ProductName</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="ProductName" class="form-control text-info" id="exampleInputUsername2" placeholder="product name">
                    </div>
                </div>
                
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Images</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="ProductImg" class="form-control text-info" id="exampleInputEmail2" placeholder="IMG\abc.jbg">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-3 col-form-label">Price</label>
                    <div class="col-sm-9">
                        <input type="number" asp-for="Price" class="form-control text-info" id="exampleInputMobile" placeholder="300000">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Quantity</label>
                    <div class="col-sm-9">
                        <input type="number" asp-for="ProductQuantity" class="form-control text-info" id="exampleInputPassword2" placeholder="300">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">Descriptions</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Descriptions" class="form-control text-info" id="exampleInputConfirmPassword2" placeholder="Sản phẩm này có ...">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">Category</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="CategoryId" class="form-control text-info" id="exampleInputConfirmPassword2" placeholder=". . . .">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">Nhà cung cấp</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Nccid" class="form-control text-info" id="exampleInputConfirmPassword2" placeholder=". . . .">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </form>
        </div>
    </div>
</div>

